<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory
        android:title="Server"
        />
    <CheckBoxPreference
        android:key="debugMode"
        android:title="Debug Mode"
        android:defaultValue="false"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="prodServerIP"
        android:title="Address"
        android:defaultValue="99.99.99.99"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="debugServerIP"
        android:title="Debug Address"
        android:defaultValue="192.168.1.120"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="serverPort"
        android:title="Port"
        android:defaultValue="3500"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:inputType="number"
        android:maxLines="1" />

    <EditTextPreference
        android:key="days"
        android:title="Number of Days to Download"
        android:defaultValue="1"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:inputType="number"
        android:maxLines="1" />

    <PreferenceCategory
        android:title="Notifications"
    />

       <CheckBoxPreference
        android:key="notifyAlerts"
        android:title="Enable Alerts"
        android:defaultValue="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <RingtonePreference
        android:title="Choose Notification Sound"
        android:showDefault="true"
        android:key="sound"
        android:ringtoneType="notification"
        android:summary="Choose Notification Sound"/>

    <CheckBoxPreference
        android:key="markWatched"
        android:title="Mark Watched When Watched"
        android:defaultValue="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="internalPlayer"
        android:title="Use Internal Player"
        android:defaultValue="false"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
